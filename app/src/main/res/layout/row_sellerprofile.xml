<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/TXV_SellerProfileNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name_product"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:fontFamily="@font/zone"
            android:textColor="@color/Blue_777"/>
        <ImageView
            android:id="@+id/IMV_SellerProfileImagProduct"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/barcelona"/>
        <Button
            android:id="@+id/BTN_SellerProfileBtnDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detalles"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>